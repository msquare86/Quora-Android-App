<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quorabay.QuorabayModeratorActivity">
    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/quora_add_moderator_homepage_layout"
        tools:openDrawer="start">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quora_home_moderator_bar"
                android:background="@color/quorabay_dark"
                android:elevation="4dp"/>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:fabSize="normal"
                    android:src="@drawable/ic_quorabay_add"
                    android:backgroundTint="@color/quorabay_dark"
                    android:layout_gravity="bottom|end"
                    android:id="@+id/fav_quorabay_moderator_post_add"
                    android:contentDescription="TODO" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/quorabay_moderator_recyler_view"/>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/quora_nav_moderator_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:headerLayout="@layout/quorabay_nav_header"
            app:menu="@menu/moderator_menu"
            android:layout_gravity="start"/>
    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>