<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quorabay.QuorabayPostQuestionActivity">

    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quorabay_postquestion_question_toolbar"
        android:background="@color/quorabay_dark"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Moderator"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/quorabay_dark"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/et_quorabay_addmoderator_moderatorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Moderator Name"/>

    <EditText
        android:id="@+id/et_quorabay_addmoderator_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Moderator Email"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@color/quorabay_text_color"
        android:textColorHint="@color/quorabay_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_quorabay_addmoderator_cancel"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/quorabay_dark"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@color/quorabay_dark"

            android:textColor="@color/quorabay_light"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_quorabay_addmoderator_add"
            android:backgroundTint="@color/quorabay_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:background="@color/quorabay_dark"
            android:textColor="@color/quorabay_light"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>