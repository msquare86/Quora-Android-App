<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_theme_dark"
    tools:context="quorabay.RegistrationActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/bg_theme_light"
            app:hintTextColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:id="@+id/et_register_name"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/bg_theme_light"
            app:hintTextColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            app:helperTextTextColor="@color/textcolor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:helperTextEnabled="true"
            app:helperText="*Required"
            android:hint="Username">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:id="@+id/et_register_username"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/bg_theme_light"
            app:hintTextColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            app:helperTextTextColor="@color/textcolor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:helperTextEnabled="true"
            app:helperText="*Required"
            app:errorEnabled="true"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_register_email"
                android:textColor="@color/textcolor"
                android:inputType="textEmailAddress"

                />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/bg_theme_light"
            app:hintTextColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            app:helperTextTextColor="@color/textcolor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:helperTextEnabled="true"
            app:helperText="*Required"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/textcolor"
                android:id="@+id/et_register_password"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_mobile_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/bg_theme_light"
            app:hintTextColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Mobile Number">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/textcolor"
                android:id="@+id/et_register_mobile_num"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/bg_theme_light"
                app:hintTextColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                app:helperTextTextColor="@color/textcolor"
                android:layout_marginRight="5dp"
                android:hint="Profile Type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/tvl_register_dropdown_profile_type">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/textcolor"
                    android:id="@+id/actv_register_dropdown_profile_type"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etl_register_date_of_birth"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:boxStrokeColor="@color/bg_theme_light"
                app:hintTextColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                app:helperTextTextColor="@color/textcolor"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:errorEnabled="true"
                android:hint="Date Of Birth">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_register_date_of_birth"
                    android:textColor="@color/textcolor"
                    android:inputType="date" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/bg_theme_light"
            app:hintTextColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            app:helperTextTextColor="@color/textcolor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="Tell us about yourself...">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_register_bio"
                android:textColor="@color/textcolor"
                android:lines="3"
                android:maxLines="5"
                android:gravity="start"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox android:id="@+id/checkbox_register_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:onClick="onCheckboxClicked"
                android:text="General" />
            <CheckBox android:id="@+id/checkbox_register_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:onClick="onCheckboxClicked"
                android:text="Sports"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox android:id="@+id/checkbox_register_fashion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:onClick="onCheckboxClicked"
                android:text="Fashion" />
            <CheckBox android:id="@+id/checkbox_register_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:onClick="onCheckboxClicked"
                android:text="Food"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox android:id="@+id/checkbox_register_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:onClick="onCheckboxClicked"
                android:text="Education" />
            <CheckBox android:id="@+id/checkbox_register_automobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:onClick="onCheckboxClicked"
                android:text="Automobile"/>
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/iv_register_profile_pic"/>

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/addimage"
            app:iconTint="@color/textcolor"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:textColor="@color/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="60dp"
            android:text="Add Profile Image"
            android:id="@+id/bt_register_add_image"/>

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/adduser"
            app:iconTint="@color/textcolor"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:textColor="@color/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="60dp"
            android:text="Register"
            android:id="@+id/bt_register_add_user"/>


        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:textColor="@color/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="80dp"
            android:text="Already an user? Login!"
            android:id="@+id/bt_register_login"/>

    </LinearLayout>
</ScrollView>